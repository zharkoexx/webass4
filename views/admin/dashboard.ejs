<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Dashboard</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/2aba850fd9.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-confetti@latest/dist/js-confetti.browser.js"> </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</head>
<body class="bg-dark">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Home</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/login">Log In</a>
              </li>

              <li class="nav-item">
                <a class="nav-link active" href="/dashboard">Dashboard</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    <div class="container">
        <!-- Main content area where alerts will be inserted before -->
        <div class="main pt-5">
            <div class="row">
                <div class="col-8">
                    <div class="col-10">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Gmail</th>
                                    <th>Role</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="user-list">
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td><%= user.username %></td>
                                        <td><%= user.gmail %></td>
                                        <td><%= user.role %></td>
                                        <td>
                                            <a href="#" class="btn btn-warning btn-sm edit" data-username="<%= user.username %>">Edit</a>
                                            <a href="#" class="btn btn-danger btn-sm delete" data-username="<%= user.username %>">Delete</a>
                                        </td>
                                    </tr>
                                <% }); %>
                                <!-- More rows as needed -->
                            </tbody>
                        </table>
                    </div>
                </div>    
                <div class="col-4 bg-dark text-light">
                    <div class="container my-3 p-3 border border-2 text-center">
                        <button onclick="getRandomJoke()" class="btn btn-primary mt-2">Random Noris quoute</button>
                        <div id="jokes-container" class="p-2">
                            <!-- Jokes will be displayed here -->
                        </div>
                    </div>
                    <div class="container my-3 p-3 border border-2 text-center">
                        <button type="button" class="btn btn-primary" onclick="fetchRandomAnimeGif()">
                            Random anime Gif
                        </button>
                        <div id="animeGifContainer" class="img-fluid d-flex justify-content-center">
                            <!-- Anime GIFs will be displayed here -->
                        </div>
                    </div>
                    <div class="container my-3 p-3 border border-2 text-center">
                        <button type="button" class="btn btn-primary" onclick="fun()">
                            Random Picture
                        </button>
                        <div id="funFactInfo">
                            <!-- Fun facts will be displayed here -->
                        </div>
                    </div>
                </div> 
                               
                </div>
            </div>
        </div>    
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Edit form -->
                    <form id="editForm">
                        <div class="m-auto">
                            <label for="editUsername" class="form-label">Username</label>
                            <input type="text" class="form-control" id="editUsername" required>
                        </div>
                        <div class="m-auto">
                            <label for="editRole" class="form-label">Role</label>
                            <input type="text" class="form-control" id="editRole" required>
                        </div>
                        <!-- Add other input fields for editing user information if needed -->
                        <button type="submit" id="submitEdit" class="btn btn-primary m-auto ">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <footer class="mt-auto bg-very-dark text-dark fw-bold text-center py-3">
        <div class="container">
          Taiyr Taishanov<br>
          SE-2210
        </div>
    </footer>
    
      
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-confetti@latest/dist/js-confetti.browser.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
